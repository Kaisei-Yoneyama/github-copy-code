{
  "name": "github-copy-code",
  "description": "GitHub の差分ページでコードをクリップボードにコピーできるようにするブラウザー拡張機能",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "wxt",
    "dev:firefox": "wxt -b firefox",
    "build": "wxt build",
    "build:firefox": "wxt build -b firefox",
    "zip": "wxt zip",
    "zip:firefox": "wxt zip -b firefox",
    "compile": "tsc --noEmit",
    "preinstall": "npx only-allow pnpm",
    "postinstall": "wxt prepare",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "test": "vitest --run",
    "test:watch": "vitest --watch",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:all": "pnpm test && pnpm test:e2e"
  },
  "dependencies": {
    "@primer/octicons-react": "19.21.0",
    "@primer/primitives": "11.3.1",
    "@primer/react": "37.31.0",
    "@webcomponents/custom-elements": "1.6.0",
    "@webext-core/messaging": "2.3.0",
    "@webext-core/proxy-service": "1.2.1",
    "diff": "8.0.2",
    "handlebars": "4.7.8",
    "idb": "8.0.3",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "styled-components": "5.3.11"
  },
  "devDependencies": {
    "@eslint/js": "9.39.1",
    "@playwright/test": "1.56.1",
    "@types/chrome": "0.1.27",
    "@types/react": "19.2.6",
    "@types/react-dom": "19.2.3",
    "@types/styled-components": "5.1.34",
    "@wxt-dev/module-react": "1.1.5",
    "eslint": "9.39.1",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-react": "7.37.5",
    "globals": "16.5.0",
    "prettier": "3.6.2",
    "typescript": "5.9.3",
    "typescript-eslint": "8.47.0",
    "vitest": "3.2.4",
    "wxt": "0.20.11"
  },
  "packageManager": "pnpm@10.18.0+sha256.3967a3efe2909df305fec4b833a304dfca17c380b6bb77672f4dac4f2cdd3788"
}
